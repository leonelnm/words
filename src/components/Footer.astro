---
import type { CollectionEntry } from "astro:content";

interface Props {
  prev?: CollectionEntry<"words">;
  next: CollectionEntry<"words"> | undefined;
}

const { prev, next } = Astro.props;
---

<footer class="flex justify-between pt-6 text-base font-semibold leading-7">
  <a
    href={prev ? "/words/" + prev.slug : "/"}
    class="text-base text-sky-500 hover:text-sky-600"
  >
    &larr; Anterior
  </a>

  {
    next && (
      <div>
        <a
          href={`/words/${next.slug}`}
          class="text-base text-sky-500 hover:text-sky-600"
        >
          Siguiente &rarr;
        </a>
      </div>
    )
  }
</footer>
