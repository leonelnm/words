---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Escritos con amor" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main class="relative flex min-h-screen flex-col justify-center overflow-hidden bg-gray-50 py-6 sm:py-12 custom-background">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	.custom-background{
		background-color: #e5e5f7;
		opacity: 0.6;
		background-image:  linear-gradient(135deg, #c5c5c5 25%, transparent 25%), linear-gradient(225deg, #c5c5c5 25%, transparent 25%), linear-gradient(45deg, #c5c5c5 25%, transparent 25%), linear-gradient(315deg, #c5c5c5 25%, #e5e5f7 25%);
		background-position:  4px 0, 4px 0, 0 0, 0 0;
		background-size: 4px 4px;
		background-repeat: repeat;
	}
</style>