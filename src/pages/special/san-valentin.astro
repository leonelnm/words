---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="Bebuki San Valentin">
  <div
    class="min-h-screen bg-gradient-to-r from-pink-500 to-red-500 text-white"
  >
    <!-- Contenedor principal -->
    <div
      class="flex flex-col items-center justify-center h-screen space-y-6 relative"
    >
      <!-- Título -->
      <h1 class="text-4xl sm:text-6xl font-semibold text-center">
        ¡Feliz San Valentín Bebuki!
      </h1>

      <!-- Mensaje -->
      <p class="text-lg sm:text-2xl text-center px-4 sm:px-8">
        Quiero aprovechar este día para recordarte lo importante que eres para
        mí. Cada día contigo es una bendición y hoy quiero que sepas lo mucho
        que te quiero. ♥️
      </p>

      <!-- Imagen (opcional) -->
      <img
        src="/images/dedos.webp"
        alt="Imagen de San Valentín"
        class="rounded-full w-40 h-40 object-cover shadow-lg shadow-red-800"
      />

      <!-- Botón para interacción -->
      <button
        id="loveButton"
        class="bg-pink-600 hover:bg-pink-700 px-6 py-3 rounded-lg text-lg mt-4 focus:outline-none transform transition duration-300 ease-in-out"
      >
        Te amo mucho
      </button>
    </div>
  </div>
</BaseLayout>

<script>
  import confetti from "canvas-confetti";

  const loveButton = document.getElementById("loveButton");
  loveButton &&
    loveButton.addEventListener("click", () => {
      const heart = confetti.shapeFromPath({
        path: "M167 72c19,-38 37,-56 75,-56 42,0 76,33 76,75 0,76 -76,151 -151,227 -76,-76 -151,-151 -151,-227 0,-42 33,-75 75,-75 38,0 57,18 76,56z",
        // matrix: [
        //   0.03333333333333333, 0, 0, 0.03333333333333333, -5.566666666666666,
        //   -5.533333333333333,
        // ],
      });

      // Generar 30 corazones con la librería de confeti
      // const defaults = {
      //   spread: 360,
      //   ticks: 100,
      //   gravity: 0,
      //   decay: 0.94,
      //   startVelocity: 30,
      //   shapes: [heart],
      //   colors: ["FFC0CB", "FF69B4", "FF1493", "C71585"],
      // };

      const defaults = {
        scalar: 2,
        spread: 180,
        // particleCount: 30,
        origin: { y: -0.1 },
        startVelocity: -35,
        shapes: [heart],
        colors: ["FFC0CB", "FF69B4", "FF1493", "C71585"],
      };

      confetti({
        ...defaults,
        particleCount: 50,
        scalar: 2,
      });

      confetti({
        ...defaults,
        particleCount: 25,
        scalar: 3,
      });

      confetti({
        ...defaults,
        particleCount: 10,
        scalar: 4,
      });
    });
</script>
